{
  "extends": "@1stg/stylelint-config/scss/loose",
  "files": "**/*.scss",
  "rules": {
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": null,
    "selector-type-no-unknown": true,
    "scss/function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "use-rgb"
        ]
      }
    ]
  },
  "ignoreFiles": [
    "dist",
    "node_modules",
    "*/*.ts"
  ]
}
